{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",

    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  }
}
